{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es2021",
		"module": "system",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"removeComments": false,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"]
		},
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"outDir": "",
		"outFile": ""
	},
	"include": ["./src/**/*"],

	// 必須
	// トランスパイルから除外する
	// node_modules 等も必須
	"exclude": ["./test/**/*", "node_modules", "**/node_modules/"]
}
